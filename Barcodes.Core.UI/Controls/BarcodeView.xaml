<UserControl x:Class="Barcodes.Core.UI.Controls.BarcodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Barcodes.Core.UI.Controls"
             mc:Ignorable="d">
    <Border BorderThickness="1"
            BorderBrush="{StaticResource DarkGreyBrush}"
            Background="{StaticResource LightGreyBrush}"
            Padding="5"
            Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.ColumnSpan="2"
                    FontWeight="Bold"
                    Content="{Binding Title}"
                    HorizontalContentAlignment="Center" />
            <Label Grid.Row="1"
                    Content="Type:" />
            <TextBox Grid.Row="1"
                    Grid.Column="1"
                    IsReadOnly="True"
                    Width="300"
                    HorizontalAlignment="Left"
                    Text="{Binding TypeTitle}" />
            <Label Grid.Row="2"
                    Content="Data:" />
            <TextBox Grid.Row="2"
                    Grid.Column="1"
                    IsReadOnly="true"
                    Width="300"
                    HorizontalAlignment="Left"
                    Text="{Binding Data}" />
            <Image Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="40 5"
                    Source="{Binding Barcode}"
                    Width="{Binding BarcodeWidth}"
                   Height="{Binding BarcodeHeight}" />
        </Grid>
    </Border>
</UserControl>
