<UserControl x:Class="Barcodes.Core.UI.Controls.GenerationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Barcodes.Core.UI.Controls"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d">
    <StackPanel Margin="5">
        <GroupBox Header="Barcode generation">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Content="Title:" />
                <TextBox Grid.Column="1" 
                            Text="{Binding Title}" />

                <Label Grid.Row="1" 
                           Content="Type:" />
                <ComboBox Grid.Row="1" 
                                Grid.Column="1" 
                                Width="180"
                                HorizontalAlignment="Left"
                                ItemsSource="{Binding BarcodeTypes}"
                                SelectedItem="{Binding SelectedBarcodeType}"
                                DisplayMemberPath="TypeTitle" />

                <Label Grid.Row="2" 
                           Content="Data:" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Text="{Binding Data}" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         HorizontalScrollBarVisibility="Disabled"
                         VerticalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Top"
                         Width="300"
                         Height="60" />

                <CheckBox Grid.Row="3"
                            Grid.Column="1"
                            IsChecked="{Binding ValidateCodeText}"
                            VerticalContentAlignment="Center"
                            Content="Validate data" />
                
                <StackPanel Grid.Row="4"
                            Grid.Column="1"
                            Orientation="Horizontal">
                    <ComboBox Width="180"
                                HorizontalAlignment="Left"
                                ItemsSource="{Binding AdditionalInputs}"
                                SelectedItem="{Binding SelectedAdditionalInput}"
                                DisplayMemberPath="Title" />
                    <Button Content="Enter data"
                            Width="80"
                            Command="{Binding AdditionalInputCommand}" />
                </StackPanel>

                <CheckBox Grid.Row="5"
                          Grid.Column="1"
                          IsChecked="{Binding DefaultSize}"
                          VerticalContentAlignment="Center"
                          Content="Use default sizes" />

                <Label Grid.Row="6"
                       Content="Width: " />
                <toolkit:IntegerUpDown Grid.Row="6"
                                           Grid.Column="1"
                                           TextAlignment="Left"
                                           Minimum="100"
                                           Width="120"
                                           HorizontalAlignment="Left"
                                           Margin="{StaticResource DefaultMargin}"
                                           Value="{Binding Width}"
                                           IsReadOnly="{Binding DefaultSize}" />

                <Label Grid.Row="7"
                       Content="Height: " />
                <toolkit:IntegerUpDown Grid.Row="7"
                                           Grid.Column="1"
                                           TextAlignment="Left"
                                           Minimum="100"
                                           Width="120"
                                           HorizontalAlignment="Left"
                                           Margin="{StaticResource DefaultMargin}"
                                           Value="{Binding Height}"
                                           IsReadOnly="{Binding DefaultSize}" />

            </Grid>
        </GroupBox>
        <UniformGrid Columns="3">
            <Button Grid.Row="5"
                            Grid.ColumnSpan="5"
                            Content="Add new"
                            Command="{Binding AddNewCommand}" />
            <Button Grid.Row="5"
                            Grid.ColumnSpan="5"
                            Content="Edit"
                            Command="{Binding EditCommand}" />
            <Button Grid.Row="5"
                            Grid.ColumnSpan="5"
                            Content="Cancel"
                            Command="{Binding CancelCommand}"/>
        </UniformGrid>
    </StackPanel>
</UserControl>
